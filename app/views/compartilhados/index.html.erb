<h1>Compartilhados</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compartilhados.each do |compartilhado| %>
      <tr>
        <td><%= compartilhado.nome %></td>
        <td><%= link_to 'Mostrar', compartilhado %></td>
        <td><%= link_to 'Editar', edit_compartilhado_path(compartilhado) %></td>
        <td><%= link_to 'Apagar', compartilhado, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Compartilhamento', new_compartilhado_path %>